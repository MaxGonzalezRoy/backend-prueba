        <button id="menu-btn" class="md:hidden text-2xl">&#9776;</button>
            <ul id="menu" class="hidden md:flex space-x-6 font-medium">
                <li><a href="/home" class="hover:text-blue-500">Inicio</a></li>
                <li><a href="/products" class="hover:text-blue-500">Productos</a></li>
